<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene">
  <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />

  <children>
    <!-- Main Photo Display -->
    <Group translation="[40, 22]">
      <Rectangle
          color="#00000000"
          width="1200"
          height="675"
          radius="60" />
      <Poster
          id="mainPhoto"
          width="1180"
          height="655"
          loadWidth="1280"
          loadHeight="720"
          translation="[10, 10]"
          loadDisplayMode="scaleToFit" />
    </Group>

    <!-- Animations for the fade transition -->
    <Animation
      id="fadeOut"
      duration="0.5"
      easeFunction="linear">
      <FloatFieldInterpolator
        key="[0.0, 1.0]"
        keyValue="[1.0, 0.0]"
        fieldToInterp="mainPhoto.opacity" />
    </Animation>

    <Animation
      id="fadeIn"
      duration="0.5"
      easeFunction="linear">
      <FloatFieldInterpolator
        key="[0.0, 1.0]"
        keyValue="[0.0, 1.0]"
        fieldToInterp="mainPhoto.opacity" />
    </Animation>

    <!-- Photo Counter Label -->
    <Label
      id="photoCounter"
      width="300"
      height="40"
      translation="[50, 50]"
      horizAlign="left"
      font="font:SmallBoldSystemFont" />

    <!-- Thumbnail Strip -->
    <RowList
      id="thumbnailStrip"
      translation="[0, 600]"
      itemComponentName="ThumbnailItem"
      numRows="1"
      rowHeights="[120]"
      itemSize="[160, 90]"
      rowItemSpacing="[[20, 0]]" />
    <!-- Play/Pause Indicator -->
    <Label
      id="playPauseIndicator"
      width="200"
      height="40"
      translation="[1030, 50]"
      horizAlign="right"
      font="font:SmallBoldSystemFont"
      text="Playing" />
  </children>
</component>
