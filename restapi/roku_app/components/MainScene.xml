<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene">
  <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />

  <children>
    <!-- Main Photo Display -->
    <Poster
      id="mainPhoto"
      width="1280"
      height="720"
      loadWidth="1280"
      loadHeight="720"
      translation="[0, 0]"
      loadDisplayMode="scaleToFit" />

    <!-- Poster for the next photo in the transition -->
    <Poster
      id="nextPhoto"
      width="1280"
      height="720"
      loadWidth="1280"
      loadHeight="720"
      translation="[1280, 0]"
      loadDisplayMode="scaleToFit"
      opacity="1" />

    <!-- Animation for the slide transition -->
    <Animation
        id="slideAnimation"
        duration="0.5"
        control="stop"
        easeFunction="linear">

        <Vector2DAnimation
            target="mainPhoto"
            field="translation"
            keyValue="[ [-1280, 0] ]" />

        <Vector2DAnimation
            target="nextPhoto"
            field="translation"
            keyValue="[ [0, 0] ]" />
    </Animation>

    <!-- Photo Counter Label -->
    <Label
      id="photoCounter"
      width="300"
      height="40"
      translation="[50, 50]"
      horizAlign="left"
      font="font:SmallBoldSystemFont" />

    <!-- Thumbnail Strip -->
    <RowList
      id="thumbnailStrip"
      translation="[0, 600]"
      itemComponentName="ThumbnailItem"
      numRows="1"
      rowHeights="[120]"
      itemSize="[160, 90]"
      rowItemSpacing="[[20, 0]]" />
    <!-- Play/Pause Indicator -->
    <Label
      id="playPauseIndicator"
      width="200"
      height="40"
      translation="[1030, 50]"
      horizAlign="right"
      font="font:SmallBoldSystemFont"
      text="Playing" />
  </children>
</component>
